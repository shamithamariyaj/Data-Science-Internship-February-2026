#Inventory Reorder Alert System
def check_inventory(products):
    for item, qty in products.items():
        if qty < 15:
            print(f"{item}: Reorder Alert")
        else:
            print(f"{item}: Stock OK")

products = {
    "Keyboard": 10,
    "Mouse": 25,
    "Monitor": 12,
    "USB": 30
}

check_inventory(products)


