#Student Result Processing System
def student_result(marks):
    total = 0

    for m in marks:
        total += m

    average = total / len(marks)

    if average >= 50:
        return "Pass"
    else:
        return "Fail"

marks = list(map(int, input("Enter marks separated by space: ").split()))
result = student_result(marks)

print("Result:", result)


