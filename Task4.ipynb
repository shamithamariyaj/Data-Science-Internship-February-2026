#Employee Attendance Eligibility Checker
def check_attendance(attendance):
    present = 0

    for day in attendance:
        if day == "P":
            present += 1

    percentage = (present / len(attendance)) * 100

    if percentage >= 75:
        return "Eligible"
    else:
        return "Not Eligible"

attendance_list = input("Enter attendance (P/A separated by space): ").split()
print("Status:", check_attendance(attendance_list))


