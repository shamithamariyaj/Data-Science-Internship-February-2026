# Sensor Data Validation
sensor_readings = [3, 4, 7, 8, 10, 12, 5]

# Find valid (even) readings with their hour index
valid_readings = [(index, value) 
                  for index, value in enumerate(sensor_readings) 
                  if value % 2 == 0]

print("Valid Sensor Readings (Hour, Value):")
print(valid_readings)


# %%
# Email Domain Usage Analysis
emails = [
    "ravi@gmail.com",
    "anita@yahoo.com",
    "kiran@gmail.com",
    "suresh@gmail.com",
    "meena@yahoo.com"
]

# Step 1: Count domains
domain_count = {}

for email in emails:
    domain = email.split("@")[1]   # extract domain after '@'
    domain_count[domain] = domain_count.get(domain, 0) + 1

# Step 2: Calculate percentage usage
total = len(emails)

for domain, count in domain_count.items():
    percentage = (count / total) * 100
    print(f"{domain}: {int(percentage)}%")


# %%
# Sales Spike Detection
sales = [1200, 1500, 900, 2200, 1400, 3000]

# Step 1: Calculate average sales
average_sales = sum(sales) / len(sales)

# Step 2: Define spike threshold (30% above average)
threshold = average_sales * 1.3

# Step 3: Detect spike days
for i, value in enumerate(sales, start=1):  # start=1 → day numbers begin from 1
    if value > threshold:
        print(f"Day {i}: {value}")


# %%
# Duplicate User ID Detection
user_ids = ["user1", "user2", "user1", "user3", "user1", "user3"]

# Step 1: Count occurrences
count_dict = {}

for user in user_ids:
    count_dict[user] = count_dict.get(user, 0) + 1

# Step 2: Display duplicates only
for user, count in count_dict.items():
    if count > 1:
        print(f"{user} → {count} times")



