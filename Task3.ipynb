# Employee Performance Bonus Eligibility
employees = {
    "Ravi":92 , "Anita":88 , "Kiran":92 , "Suresh":85
}

highest_score = max(employees.values())

top_performances = [name for name, score in employees.items() if score == highest_score]

print(f"Top performers Eligible for Bonus: {', '.join(top_performances)} (Score:{highest_score})")


# %%
# Search Query Keyword Analysis
query = "Buy mobile phone buy phone online"

# Step 1: convert to lowercase
query = query.lower()

# Step 2: remove punctuation
import string
query = query.translate(str.maketrans('', '', string.punctuation))

# Step 3: split into words
words = query.split()

# Step 4: count frequency
freq = {}
for word in words:
    freq[word] = freq.get(word, 0) + 1

# Step 5: keep only keywords searched more than once
result = {word: count for word, count in freq.items() if count > 1}

print(result)


